{% extends 'base.html.twig' %}

{% block title %}Hideaway index{% endblock %}

{% block body %}
    <h1>Hideaway index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adress</th>
                <th>Country</th>
                <th>Type</th>
                <th>Alias</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hideaway in hideaways %}
            <tr>
                <td>{{ hideaway.id }}</td>
                <td>{{ hideaway.adress }}</td>
                <td>{{ hideaway.country }}</td>
                <td>{{ hideaway.type }}</td>
                <td>{{ hideaway.alias }}</td>
                <td>
                    <a href="{{ path('hideaway_show', {'id': hideaway.id}) }}">show</a>
                    <a href="{{ path('hideaway_edit', {'id': hideaway.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('hideaway_new') }}">Create new</a>
{% endblock %}
