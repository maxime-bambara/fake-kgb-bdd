{% extends 'base.html.twig' %}

{% block title %}Missions index
{% endblock %}

{% block body %}
	<h1>Missions index</h1>

	<table class="table table-striped table-hover table-responsive text-center">
		<thead>
			<tr>
				<th scope="col">Title</th>
				<th scope="col">Description</th>
				<th scope="col">Code</th>
				<th scope="col">Country</th>
				<th scope="col">StartDate</th>
				<th scope="col">EndDate</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for mission in missions %}
				<tr>
					<td scope="row">{{ mission.title }}</td>
					<td>{{ mission.description }}</td>
					<td>{{ mission.code }}</td>
					<td>{{ mission.country }}</td>
					<td>{{ mission.startDate ? mission.startDate|date('Y-m-d') : '' }}</td>
					<td>{{ mission.endDate ? mission.endDate|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('app.missions.show', {'id': mission.id}) }}">show</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a href="{{ path('app.missions.edit', {'id': mission.id}) }}">edit</a>
						{% endif %}
					</td>
				</tr>
			</td>
		</tbody>
	</tr>
